<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <TextView
        android:id="@+id/leftTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/farRightIv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/rightIv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@id/farRightIv"
        android:scaleType="centerInside"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/middleEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/leftTv"
        android:background="@drawable/se_et_bg_1"
        android:gravity="center_horizontal"
        android:inputType="text"
        android:maxWidth="170dp"
        android:minWidth="100dp"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorText3"
        android:textSize="16sp" />

</RelativeLayout>