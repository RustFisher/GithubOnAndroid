<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBg3</item>
        <item name="colorPrimaryDark">@color/colorBg4</item>
        <item name="colorAccent">@color/colorBg5</item>
    </style>

    <style name="NoTitleThemeCompat" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ownerInfoText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
        <item name="android:layout_marginStart">2dp</item>
    </style>

    <style name="repoDetailText">
        <item name="android:minWidth">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

</resources>
